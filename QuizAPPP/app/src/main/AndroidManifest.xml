<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quizappfinal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/quizlogo"
        android:label="Quiz App"
        android:roundIcon="@mipmap/quizlogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizAppFinal">

        <!-- Start Screen (Welcome) -->
        <activity android:name=".StartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Subject Selection Screen -->
        <activity android:name=".SelectSubjectActivity" />

        <!-- Quiz Screen -->
        <activity android:name=".QuizActivity" />

        <!-- End Screen -->
        <activity android:name=".EndActivity"

        android:theme="@style/Theme.QuizAppFinal" />

    </application>

</manifest>
